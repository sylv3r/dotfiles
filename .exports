#!/bin/sh
#
# Env exports
# -----------------------------------------------------------------------------
# Bundle: Sylver's dotfiles
# Repository: https://github.com/sylver/dotfiles
# Author: Richard (Sylver) Kemp
# -----------------------------------------------------------------------------

source ~/.dotfiles/lib/helper.sh

# Locales settings
#
export LC_CTYPE=en_US.UTF-8
export LC_ALL=en_US.UTF-8

# PATH
#
PATH=$PATH:/usr/bin:/bin:/usr/sbin:/opt/X11/bin
PATH=$PATH:${HOME}/.bin:/usr/local/bin:/usr/local/sbin
# PATH="`ruby -e 'puts Gem.user_dir'`/bin:$PATH"
# PATH="/usr/local/opt/helm@2/bin:$PATH" # TEMPORARY HELM 2.0
export PATH

# History
#
export HISTCONTROL=ignoreboth
export HISTSIZE=10000
export SAVEHIST=10000
export HISTFILESIZE=100000
export HISTFILE=~/.histfile

# GPG
#
export GPG_TTY=$(tty)

# Context
#
#export TERM=terminator
export TERM="xterm-256color"
export PAGER=/usr/bin/less
export EDITOR=/usr/bin/vim
export FCEDIT=/usr/bin/vim

# DEBIAN MAINTAINER
#
DEBEMAIL=richard@kemp.pm
DEBFULLNAME="Richard (Sylver) Kemp"
export DEBEMAIL DEBFULLNAME

# LS
#
# BSD ls colors settings
export LSCOLORS="exfxcxdxbxfxdxabagacad"
# GNU ls colors settings
export LS_COLORS="di=34:ln=36:so=93:pi=33:ex=31:bd=95:cd=35:su=90;41:sg=90;41:tw=94;41:ow=94;41:*.gz=91:*.deb=91:*.png=32:*.jpg=32"

# LESS COLORS
#
export LESS_TERMCAP_mb=$'\E[01;31m'       # begin blinking
export LESS_TERMCAP_md=$'\E[01;38;5;74m'  # begin bold
export LESS_TERMCAP_me=$'\E[0m'           # end mode
export LESS_TERMCAP_se=$'\E[0m'           # end standout-mode
export LESS_TERMCAP_so=$'\E[38;5;246m'    # begin standout-mode - info box
export LESS_TERMCAP_ue=$'\E[0m'           # end underline
export LESS_TERMCAP_us=$'\E[04;38;5;146m' # begin underline

# ANDROID
#
if [ $OS = 'macos' ]; then 
  export ANDROID_HOME=$HOME/Library/Android/sdk
  PATH=$PATH:$ANDROID_HOME/emulator
  PATH=$PATH:$ANDROID_HOME/tools
  PATH=$PATH:$ANDROID_HOME/tools/bin
  PATH=$PATH:$ANDROID_HOME/platform-tools
  export PATH
fi

# QT HDPI Scaling
#
#export QT_AUTO_SCREEN_SCALE_FACTOR=1
#export QT_SCALE_FACTOR=1.5
#export QT_SCREEN_SCALE_FACTORS=1.5
#export GDK_SCALE=2
#export GDK_DPI_SCALE=0.5

# LATEX
#
if [ $OS = 'macos' ]; then 
  export PATH=$PATH:/Library/TeX/texbin
fi
export TEXINPUTS=~/.texmf//:
export TTFONTS=~/.texmf//:
export OPENTYPEFONTS=~/.texmf//:
export FONTS=~/Library/Fonts/

# VSCode
#
if [ $OS = 'macos' ]; then 
  export PATH=$PATH:/Applications/Visual\ Studio\ Code.app/Contents/Resources/app/bin
fi
